# SmallTalk Docker Configuration
# Copy this file to .env and fill in your values

# ================================
# Application Configuration
# ================================
NODE_ENV=production
APP_PORT=3000
HEALTH_PORT=3001

# ================================
# LLM Provider API Keys
# ================================
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
GEMINI_API_KEY=your-gemini-key-here

# ================================
# Storage Configuration
# ================================
# Storage type: redis, postgres, or file
STORAGE_TYPE=redis

# Redis Configuration
REDIS_PORT=6380
REDIS_MAX_MEMORY=256mb

# PostgreSQL Configuration
POSTGRES_PORT=5433
POSTGRES_DB=smalltalk
POSTGRES_USER=smalltalk
POSTGRES_PASSWORD=changeme_in_production

# ================================
# Session Management
# ================================
# Session TTL in seconds (default: 1 hour)
SESSION_TTL=3600
# Cleanup interval in seconds (default: 5 minutes)
SESSION_CLEANUP_INTERVAL=300

# ================================
# Agent Health Monitoring
# ================================
# Health check interval in seconds
AGENT_HEALTH_CHECK_INTERVAL=30
# Heartbeat timeout in seconds
AGENT_HEARTBEAT_TIMEOUT=90

# ================================
# Monitoring (Optional)
# ================================
# Prometheus
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION=30d

# Grafana
GRAFANA_PORT=3100
GRAFANA_USER=admin
GRAFANA_PASSWORD=changeme_in_production

# ================================
# Development Configuration
# ================================
# Debug port for Node.js inspector
DEBUG_PORT=9229
